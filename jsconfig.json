{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "~/*": ["resources/*"]
        },
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "exclude": ["node_modules", "public"],
    "include": [
        "resources/js/**/*.js",
        "resources/js/**/*.vue",
        "resources/js/**/*.jsx"
    ]
}
